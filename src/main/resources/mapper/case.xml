<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nci.mediccare.mapper.CaseMapper">

    <insert id="insert" parameterType="com.nci.mediccare.domain.CaseInfo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO case_info (patient_id, patient_name, gender, dob, disease, status, remarks, create_time, update_time)
        VALUES (#{patientId},
                #{patientName},
                #{gender},
                #{dob},
                #{disease},
                #{status},
                #{remarks},
                #{createTime},
                #{updateTime})
    </insert>

    <select id="selectAllCases">
        SELECT *
        FROM case_info
    </select>

    <select id="selectCasesByPatientId">
        SELECT *
        FROM case_info
        WHERE patient_id = #{patientId}
    </select>

</mapper>
